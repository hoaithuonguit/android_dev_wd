<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar_ThanhToan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"></android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/groom"
            android:paddingLeft="-40dp"
            android:paddingRight="-40dp"
            android:id="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:id="@+id/txtChuRe_LapHoaDon"
            android:layout_toLeftOf="@+id/imgheart"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/heart"
            android:id="@+id/imgheart"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/txtCoDau_LapHoaDon"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/imgheart"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imgbride"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="-40dp"
            android:paddingRight="-40dp"
            android:src="@drawable/bride"
            android:layout_alignParentRight="true"
            android:id="@+id/imgbride"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Sảnh:"
        android:id="@+id/txtSanh_LapHoaDon"

        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Đơn giá bàn(triệu đồng):"
        android:id="@+id/txtDonGiaBan"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Ngày thanh toán:"
        android:id="@+id/txt_NgayThanhToan"

        android:textSize="20dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng bàn:"
            android:layout_gravity="center|start"
            android:textSize="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:hint="Nhập số bàn"
            android:inputType="number"
            android:id="@+id/txtSLBan"
            android:textSize="20dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Tổng tiền bàn(triệu đồng):"
        android:id="@+id/txtTongTienBan"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:text="stt"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tên dịch vụ"
            android:paddingLeft="5dp"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="SL"
            android:textSize="18dp"
            android:paddingLeft="8dp"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Đơn giá(tr)"
            android:paddingLeft="5dp"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:text="Thành tiền(tr)"
            android:id="@+id/txt_hoadon_thanhtien"
            android:textSize="18dp"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:divider="@color/colorPrimaryDark"
        android:layout_weight="1"
        android:dividerHeight="1dp"
        android:id="@+id/lv_dichvu">
    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Tổng tiền dịch vụ(triệu đồng):"

        android:id="@+id/txttien_dichvu"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Tổng tiền hóa đơn(triệu đồng):"
        android:layout_marginTop="5dp"
        android:id="@+id/txttien_hoadon"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Tiền đặt cọc(triệu đồng):"
        android:layout_marginTop="5dp"
        android:id="@+id/txttien_datcoc"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Còn lại(triệu đồng):"
        android:layout_marginTop="5dp"
        android:id="@+id/txttien_conlai"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:id="@+id/ly"
        android:paddingLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trễ "
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="số"
            android:textSize="20dp"
            android:id="@+id/txtsongaytre"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ngày phạt thêm: "
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="tiền"
            android:id="@+id/txtphantram"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="%"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Lập"
            android:id="@+id/btnLap"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:id="@+id/btnHuy"/>
    </LinearLayout>



</LinearLayout>