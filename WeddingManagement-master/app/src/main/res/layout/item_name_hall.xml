<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="0dp"

    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_gravity="center|top"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/active"
            android:id="@+id/imgActive"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ckbDelete"
            android:visibility="invisible"
          android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNameHall"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imgHallName"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:id="@+id/imgHallName"
            android:layout_gravity="center"
            android:src="@drawable/marry"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lnban1"
            android:layout_below="@+id/txtNameHall">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bàn tối đa :"
            android:textColor="#FF3D00"
            android:textSize="15dp"
            android:textAlignment="center"
            android:gravity="right"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:paddingTop="10dp"

            android:paddingRight="20dp"
            android:id="@+id/txtban"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#76FF03"
            android:textSize="15dp"
            android:textAlignment="center"
            android:gravity="right"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:layout_margin="10dp"
            android:id="@+id/txtbantoida"


            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lngia"
            android:layout_below="@+id/lnban1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá tối thiểu :"
            android:textColor="#FF3D00"
            android:textSize="15dp"
            android:textAlignment="center"
            android:gravity="right"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:id="@+id/gia"
         />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#76FF03"
            android:textSize="15dp"
            android:textAlignment="center"
            android:gravity="right"
            android:layout_gravity="right"
            android:textStyle="bold"
android:id="@+id/txtgiatoithieu"
            android:layout_margin="10dp"




            />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>